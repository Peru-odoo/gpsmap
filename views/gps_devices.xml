<odoo>
    <record id='gps_devices_view_form' model='ir.ui.view'>
        <field name="name">gps_devices.form</field>
        <field name="model">gps_devices</field>
        <field name="arch" type="xml">
            <form string="GPS">
                <sheet>
                    <group col="4" string="GPS Configuration">
                        <field name="name" />
                        <field name="positionid" />
                        <field name="lastupdate"/>
                        <field name="uniqueid"/>
                        <field name="icc"/>
                        <field name="phone"/>
                        <field name="protocolid" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id='gps_devices_view_tree' model='ir.ui.view'>
        <field name="name">gps_devices.tree</field>
        <field name="model">gps_devices</field>
        <field name="arch" type="xml">
            <tree string="Models">
                <field name="solesgps_id"/>
                <field name="name" />
                <field name="protocolid" />
                <field name="positionid" />
                <field name="company_id" />
                <field name="uniqueid"/>                
                <field name="icc"/>
                <field name="lastupdate"/>                    
                <field name="phone"/>
            </tree>
        </field>
    </record>
</odoo>
